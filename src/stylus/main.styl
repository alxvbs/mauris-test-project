body
	background url('../img/bg.png') repeat
	padding-top 139px
	box-sizing border-box

.p0
	padding 0

.m0
	margin 0
	
.wavy-line
	background url('../img/wavy-line.png') repeat-x
	height 5px

.outer-form
	width 806px
	height 555px
	background-color #fcfcfc
	border-radius 4px
	padding 3px
	margin-left 553px

	.inner-form
		position relative
		height 549px
		border-left 1px solid #f5f5f5
		border-right 1px solid #f5f5f5
		border-radius 2px
		padding-top 20px
		/*background-image linear-gradient(to bottom, #e6e6e6, #f5f5f5), linear-gradient(to bottom, #f2f2f2, #f5f5f5), linear-gradient(to bottom, #f2f2f2, #f5f5f5)
		background-size 1px 100%
		background-position 0 0, 100% 0
		background-repeat no-repeat*/
		background linear-gradient(to bottom,  #e6e6e6 0%, #f5f5f5 3px, #fcfcfc 0%)

.row-1
	display flex
	height 263px
	
	.col-1
		width 300px
		margin-left 17px
		margin-right 20px

		.btn-custom
			width 300px
			height 55px
			color #fff
			font-family Arial, Helvetica, sans-serif
			font-size 16px
			border 2px solid #fdfdfd
			border-radius 19px
			box-shadow 2px 2px 4px #ebebeb, -2px 2px 4px #ebebeb
			background linear-gradient(to top, #0176a7, #55b5fe)
			
			&:hover
				border 2px solid #fdfdfd

		.wavy-line-1
			margin 24px 2px 25px 2px
	
		.wavy-line-2
			margin 29px 2px 120px 2px

		.text-block
			width 282px
			margin-left 8px

			.text-item
				font-size 16px
				line-height 20px
	
			.word-spacing-20
				word-spacing 20px

			.word-spacing-8
				word-spacing 8px

	.col-2

		.outer-hint-block
			position relative
			width 295px
			height 100%
			border 1px solid #dcdcdc
			background-color #fff
			border-radius 12px
			padding 6px
			box-shadow 1px 2px #ededed, -1px 2px #ededed
			
			.inner-hint-block
				height 100%
				border 1px dashed #d4dfec
				border-radius 14px
				
				.hint-item
					width 100%
					padding 26px
					text-align center
					
					.title
						color #dd56a7
						font-size 24px

					.main-text
						color #666
						font-size 12px
	
	.col-3
		position relative
		margin-right 18px

		.lines

			.line-1
				position absolute
				width 14px
				height 99px
				top -99px
				left 28px
				background-color #ffd2e9
				border 4px solid #ffabd6
				border-radius 6px
				box-shadow 0 0 0 2px #fff, 0 0 3px 3px #dbdbdb
				
			.line-2
				position absolute
				width 14px
				height 29px
				top -29px
				left 78px
				background-color #9ed3f9
				border 4px solid #4badf3
				border-radius 6px
				box-shadow 0 0 0 2px #fff, 0 0 3px 3px #dbdbdb
			
			.line-3
				position absolute
				width 14px
				height 59px
				top -59px
				left 128px
				background-color #cad4d9
				border 4px solid #9dafb8
				border-radius 6px
				box-shadow 0 0 0 2px #fff, 0 0 3px 3px #dbdbdb

		.icons
			margin-left 20px
			margin-top 16px
			font-size 0
			
			.heart-icon
				display inline-block
				width 29px
				height 23px
				background url('../img/heart.png')
			
			.clock-icon
				display inline-block
				width 26px
				height 25px
				margin-left 23px
				background url('../img/clock.png')
			
			.tag-icon
				display inline-block
				width 27px
				height 27px
				margin-left 23px
				background url('../img/tag.png')
			
		.wavy-line-4
			margin-top 20px
			margin-left 21px
			
